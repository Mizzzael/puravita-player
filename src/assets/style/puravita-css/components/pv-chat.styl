.puravita-chat-sidebar
    width 20%
    height 100%
    position absolute
    right -20%
    bottom 0
    z-index 16
    display flex
    flex-wrap wrap
    justify-content center
    align-items flex-end
    background -moz-linear-gradient(left,  rgba(0,0,0,0) 0%, rgba(0,0,0,0) 18%, rgba(0,0,0,0.65) 55%, rgba(0,0,0,0.65) 100%)
    background -webkit-linear-gradient(left,  rgba(0,0,0,0) 0%,rgba(0,0,0,0) 18%,rgba(0,0,0,0.65) 55%,rgba(0,0,0,0.65) 100%)
    background linear-gradient(to right,  rgba(0,0,0,0) 0%,rgba(0,0,0,0) 18%,rgba(0,0,0,0.65) 55%,rgba(0,0,0,0.65) 100%)
    transition right 200ms ease
    &-show
        right 0
    &_form
        width 100%
        height 140px
        position relative
        &_label
            background rgba(255, 255, 255, 0.3)
            backdrop-filter blur(4px)
            display block
            margin 10px auto
            width 95%
            height 90px
            border-radius 8px
            padding 0.42rem
            position relative
            cursor pointer
            overflow auto
            &_message
                font-size 0.9rem
                color #FFFFFF
        &_send
            @extends .pv-glass
            margin-left 2.5%
            font-size 0.75rem
            padding 0.2em 0.5em
            position relative
            bottom 5px
            border-radius 6px
            color #ffffff
            transition opacity 220ms ease
            opacity 0
            transition opacity 220ms ease
        &_textarea
            position absolute
            left 0
            right 0
            top 10px
            width 95%
            height 90px
            margin auto 
            border-radius 8px
            opacity 0
            z-index 0
            transition opacity 220ms ease
            resize none
            font-size 0.9rem
            padding 0.42rem 0.42rem 2rem 0.42rem            
            &:focus
                opacity 1
                z-index 1
                outline none
                & ~ .puravita-chat-sidebar_form_send
                    opacity 1
        &_tag
            background rgba(255, 255, 255, 0.5)
            display flex
            align-items center
            justify-content center
            width 100px
            border-radius 8px
            padding 0.2rem 0
            cursor pointer
            &_figure, &_close
                margin 0 0.2rem
            &_figure
                & svg
                    width 14px
                    height 14px
            &_close
                display block
                line-height 14px
                & svg
                    width 10px
                    height 10px
            &_text
                color #ffffff
                font-size 0.8rem
                padding 0 .2rem
                line-height 14px
        &_tag-box
            display inline-block
            vertical-align middle
            margin-right 0.25rem
            border-radius 8px
    &_messages
        height calc(100% - 140px)
        width 100%
        overflow auto
        display flex
        flex-wrap wrap
        align-items flex-end
        &_item
            width 95%
            margin 0.85rem auto
            &_profile
                display flex
                align-items center
                justify-content flex-end
                overflow hidden
                position relative
                padding-top 24px
                &_arrow
                    position absolute
                    width 22px
                    top -5px
                    right 10px
            &_avatar
                overflow hidden
                width 42px
                height 42px
                border-radius 100%
            &_name
                padding 0 0.62rem
                font-size 0.72rem
                color #FFFFFF
            &_baloon
                background-color #fff
                border-radius 9px
                padding 0.62rem
                font-size 0.86rem
                width 100%
                display block
                &_time
                    text-align right
                    color #808080
                    font-size 0.76rem


.puravita-player-screen-mobile .puravita-chat-sidebar, .puravita-player-screen-360p .puravita-chat-sidebar
    display none