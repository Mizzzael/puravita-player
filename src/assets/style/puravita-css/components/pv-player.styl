.puravita-player
    // max-width 1920px
    width 100%
    height 1080px
    margin 0 auto
    position relative
    background-size 100%
    background-position center center
    background-color #000
    overflow hidden
    &:not(:hover) .puravita-controller
        transform translateY(100px)
    & button
        transition ease 200ms transform
        &:focus
            outline none
    &.puravita-player-screen-360p
        // max-width 640px
        height 360px
    &.puravita-player-screen-480p
        // max-width 1100px
        height 480px
    &.puravita-player-screen-720p
        // max-width 1280px
        height 720px        
    &.puravita-player-screen-mobile
        // max-width 320px
        height 180px
        &:not(:hover) .puravita-controller
            transform translateY(60px)
    &_loading
        background-color rgba(03, 03, 03, 0.5)
        width 100%
        height 100%
        position absolute
        left 0
        top 0
        z-index 99
        display flex
        align-items center
        justify-content center
        flex-wrap wrap
        transition opacity 220ms ease
        & figure
            width 60%
            height 60%
        &.is-block
            opacity 0

.puravita-chromecast-animation
    position absolute
    width 100%
    height 100%
    background-color #ffffff
    z-index 999
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    transition 220ms ease opacity
    &:not(&_show)
        opacity 0
        display none