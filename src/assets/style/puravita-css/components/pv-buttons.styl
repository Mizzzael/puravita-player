.puravita-buttons
    width 90%
    margin 0.822em auto
    padding 0.322em 0
    display flex
    align-items center
    justify-items center
    flex-wrap wrap
    &_left-side, &_right-side, &_speed-playbackrate, &_volume, &_title
        display flex
        align-items center
        flex-wrap wrap
    &_left-side, &_right-side
        overflow hidden
    &_left-side
        width 60%
    &_right-side
        width 40%
    &_left-side, &_speed-playbackrate, &_volume, &_title   
        justify-content start
    &_right-side
        justify-content flex-end
    &_btn-play
        @extends .pv-glass
        width 42px
        height 42px
        border-radius 100%
        position relative
        & svg
            position absolute
            width 60%
            top 0
            bottom 0
            left 0
            right 0
            margin auto
    &_speed-playbackrate
        @extends .pv-glass
        border-radius 20px
        &_figure
            width 38px
            padding 0 0 0.2em 0
            & svg
                margin 0 auto
                width 20px
        &_label
            text-align left
            width 40px
            color #ffffff
            font-size 1rem
            font-weight bold
            line-height 0.8rem
    &_volume, &_speed-playbackrate, &_search, &_subtitles, &_title
        height 42px
        margin 0 0 0 0.845em
        cursor pointer
    &_volume_button, &_search_button, &_subtitles_button, &_chomecast_button, &_aside_button, &_config_button
        @extends .pv-glass
        border-radius 100%
        width 42px
        height 42px
        & svg
            width 20px
            margin 0 auto
    &_chomecast_button, &_aside_button
        margin 0 0.845em 0 0
    &_title
        font-size 0.95rem
        color #ffffff